Section "Module"
	Load "glx"
EndSection

Section "Monitor"
	Identifier "ACER"
	Option "PreferredMode" "1440x900"
	Option "DPMS" "true"
	Option "Position" "0 400"
EndSection

Section "Monitor"
	Identifier "SAMSUNG"
	Option "Primary" "true"
	Option "RightOf" "DP-1"
	Option "PreferredMode" "1920x1200"
	Option "Rotate" "left"
	Option "DPMS" "true"
	Option "Position" "1440 0"
EndSection

Section "Device"
	Identifier "nvidia card"
	Driver "nouveau"
	Option "GLXVBlank" "true"
	Option "Monitor-DP-1" "ACER"
	Option "Monitor-DVI-I-1" "SAMSUNG"
EndSection

Section "Screen"
	Identifier "screen1"
	Monitor "ACER"
	DefaultDepth 24
	SubSection "Display"
		Depth 24
		Virtual 2640 1920
	EndSubSection
	Device "nvidia card"
EndSection

Section "ServerLayout"
	Identifier "layout1"
	Screen "screen1"
EndSection
